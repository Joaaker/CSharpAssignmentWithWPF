<UserControl x:Class="MainApp.Views.ListContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainApp.Views"
             xmlns:viewmodels="clr-namespace:MainApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:ListContactsViewModel}"
             
             
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto">


            </RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.RowSpan="2">
            <Label Margin="10" Content="Contact list" FontWeight="Bold" FontSize="16"/>
            <Button Command="{Binding GoToAddContactCommand}" x:Name="AddNewContact" Content="Add a new contact" Grid.Row="0" Grid.RowSpan="2"/>
        </StackPanel>
    </Grid>
</UserControl>
